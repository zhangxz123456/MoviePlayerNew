<Window x:Class="MoviePlayer.SecondScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviePlayer"

        mc:Ignorable="d" Height="900" Width="1440" Icon="30001.ico"   WindowStyle="None" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewKeyDown="Window_PreviewKeyDown" Closed="Window_Closed" MouseRightButtonDown="Window_MouseRightButtonDown" MouseDoubleClick="Window_MouseDoubleClick">
    <Grid Name="MainGrid" Margin="0,0,0,0" >
        <Grid Name="MainPlay" Grid.Column="0" Background="Black" Margin="0,0,0,0">
           
            <InkCanvas EditingMode="None"  Tag="ink_Play" Cursor="Pen" x:Name="FInkCanvas_Player" Width="auto"  x:FieldModifier="public" Height="auto" >
            </InkCanvas>
            <InkCanvas EditingMode="None" Tag="ink_Camera"  Cursor="Pen" x:Name="FInkCanvas_Camera" x:FieldModifier="public" ResizeEnabled="True" Background="#FF131313">
              
            </InkCanvas>
        </Grid>
    </Grid>
</Window>
